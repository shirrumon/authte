{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% if app.user != null %}
        {% for role in app.user.roles %}
            {% if role != 'ROLE_ADMIN' %}
                <h4>Access denied</h4>
            {% else %}
                <h1>User index</h1>
                <hr>
                <a href="{{ path('user_new') }}" class="btn btn-primary">Create new</a>
                <br></br>
                <table class="table table-dark table-striped">
                    <thead>
                    <tr class="table-dark">
                        <th>Email</th>
                        <th>Age</th>
                        <th>Verify</th>
                        <th>Create</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr class="table-dark">
                            <td>{{ user.email }}</td>
                            <td>{{ user.date|date('d-m-Y') }}</td>
                            {% if user.isVerified == 1 %}
                                <td style="color:green">Verified</td>
                            {% else %}
                                <td style="color:red">Not verified</td>
                            {% endif %}
                            <td>{{ user.method }}</td>
                            <td>
                                <a style="color:white" href="{{ path('user_show', {'id': user.id}, relative = false) }}">show</a>
                                    /
                                <a style="color:white" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        {% endfor %}
    {% else %}
        <h4>Please,login for see this page</h4>
    {% endif %}
{% endblock %}
