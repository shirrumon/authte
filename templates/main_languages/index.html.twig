{% extends 'base.html.twig' %}
{% block body %}
    {% if app.user != null %}
        {% for role in app.user.roles %}
            {% if role != 'ROLE_ADMIN' %}
                <h4>Access denied</h4>
            {% else %}
                {{ form_start(langform) }}
                <div class="form_group">
                    <div class="col-md-4 mb-3">
                        {{ form_row(langform.languages, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Add new language</button>
                {{ form_end(langform) }}
            {% endif %}
        {% endfor %}
    {% else %}
        <h4>Please,login for see this page</h4>
    {% endif %}
{% endblock %}

